/* Modern Clean Dashboard - Balanced Layout */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.dashboard-pro {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  color: #1a1a2e;
  font-family: 'Inter', 'Segoe UI', sans-serif;
  position: relative;
}

.dashboard-pro::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23667eea" fill-opacity="0.05" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') repeat-x bottom;
  pointer-events: none;
  z-index: 0;
}

/* Modern Vibrant Navbar */
.navbar-pro {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: none;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  animation: slideDown 0.5s ease;
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.navbar-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 75px;
}

.navbar-left {
  display: flex;
  align-items: center;
  gap: 40px;
}

.logo {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 1.5rem;
  font-weight: 900;
  color: #1a1a2e;
  letter-spacing: -0.03em;
  cursor: pointer;
  transition: transform 0.3s ease;
}

.logo:hover {
  transform: scale(1.05);
}

.logo-icon {
  font-size: 2rem;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.logo-text {
  background: linear-gradient(135deg, #667eea, #764ba2, #f093fb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradientShift 3s ease infinite;
  background-size: 200% 200%;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.nav-tabs {
  display: flex;
  gap: 8px;
}

.nav-tab {
  padding: 12px 24px;
  background: transparent;
  border: none;
  color: #6b7280;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  border-radius: 12px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  gap: 8px;
  position: relative;
}

.nav-tab::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%) scaleX(0);
  width: 70%;
  height: 3px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 3px;
  transition: transform 0.3s ease;
}

.nav-tab:hover {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  transform: translateY(-2px);
}

.nav-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.nav-tab.active::before {
  transform: translateX(-50%) scaleX(1);
}

.tab-icon {
  font-size: 1.2rem;
}

.navbar-right {
.navbar-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.api-status {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 18px;
  border-radius: 50px;
  font-size: 0.85rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.api-status.connected {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: #ffffff;
  box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
}

.api-status.disconnected {
  background: linear-gradient(135deg, #ef4444, #f87171);
  color: #ffffff;
  box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: currentColor;
  animation: pulse 2s infinite;
}

.user-menu {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 16px;
  background: #1e293b;
  border-radius: 10px;
  border: 1px solid #334155;
}

.user-avatar {
  width: 36px;
  height: 36px;
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 700;
  font-size: 0.9rem;
}

.user-name {
  font-size: 0.9rem;
  color: #cbd5e1;
  font-weight: 500;
}

.logout-btn {
  padding: 10px 20px;
  background: transparent;
  border: 1px solid #ef4444;
  color: #ef4444;
  border-radius: 8px;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: all 0.3s ease;
  letter-spacing: 0.02em;
}

.logout-btn:hover {
  background: rgba(239, 68, 68, 0.1);
}

.logout-btn svg {
  width: 16px;
  height: 16px;
}

.dashboard-content {
  padding: 100px 30px 40px;
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

/* Modern Header Section */
.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
  gap: 30px;
  animation: fadeInUp 0.6s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-left {
  flex: 1;
}

.page-title {
  font-size: 3.5rem;
  font-weight: 900;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  gap: 15px;
  color: #ffffff;
  letter-spacing: -0.04em;
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.title-icon {
  font-size: 3.5rem;
  filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.2));
}

.page-subtitle {
  font-size: 1.15rem;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10px;
  font-weight: 500;
}

.page-description {
  font-size: 1.05rem;
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.7;
  max-width: 700px;
}

.highlight {
  color: #ffd93d;
  font-weight: 700;
  text-shadow: 0 2px 10px rgba(255, 217, 61, 0.3);
}

.header-right {
  display: flex;
  gap: 20px;
}

.quick-stats {
  display: flex;
  gap: 30px;
  background: rgba(255, 255, 255, 0.95);
  padding: 25px 35px;
  border-radius: 25px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(255, 255, 255, 0.5);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.stat-value {
  font-size: 2rem;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stat-label {
  font-size: 0.8rem;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  font-weight: 600;
}

/* Vibrant Metrics Row */
.metrics-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
  margin-bottom: 35px;
  animation: fadeInUp 0.7s ease 0.1s both;
}

.metric-card-pro {
  background: #ffffff;
  border: none;
  border-radius: 25px;
  padding: 30px;
  display: flex;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
}

.metric-card-pro::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
  transform: scaleX(0);
  transition: transform 0.4s ease;
}

.metric-card-pro:hover {
  transform: translateY(-10px) scale(1.02);
  box-shadow: 0 20px 60px rgba(102, 126, 234, 0.25);
}

.metric-card-pro:hover::before {
  transform: scaleX(1);
}
  align-items: center;
  gap: 20px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.metric-card-pro::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
}

.metric-card-pro.secondary::before {
  background: linear-gradient(90deg, #ec4899, #f472b6);
}

.metric-card-pro.tertiary::before {
  background: linear-gradient(90deg, #f59e0b, #fbbf24);
}

.metric-card-pro.quaternary::before {
  background: linear-gradient(90deg, #10b981, #34d399);
}

.metric-card-pro:hover {
  transform: translateY(-4px);
  border-color: #3b82f6;
  box-shadow: 0 10px 40px rgba(59, 130, 246, 0.2);
}

.metric-icon {
  width: 65px;
  height: 65px;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  flex-shrink: 0;
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.metric-card-pro:hover .metric-icon {
  transform: rotate(-10deg) scale(1.1);
  box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
}

.metric-card-pro.secondary .metric-icon {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.metric-card-pro.tertiary .metric-icon {
  background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
}

.metric-card-pro.quaternary .metric-icon {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
}

.metric-icon svg {
  width: 32px;
  height: 32px;
}

.metric-content h3 {
  font-size: 2.5rem;
  font-weight: 900;
  color: #1a1a2e;
  margin-bottom: 5px;
}

.metric-content p {
  font-size: 0.85rem;
  color: #6b7280;
  margin-bottom: 10px;
  font-weight: 500;
}

.metric-badge {
  display: inline-block;
  padding: 4px 10px;
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border-radius: 6px;
  font-size: 0.7rem;
  font-weight: 600;
  letter-spacing: 0.05em;
}

.metric-badge.proven {
  background: rgba(139, 92, 246, 0.2);
  color: #8b5cf6;
}

.metric-badge.live {
  background: rgba(236, 72, 153, 0.2);
  color: #ec4899;
}

/* Content Grid */
.content-grid {
  display: grid;
  grid-template-columns: 450px 1fr;
  gap: 30px;
  margin-bottom: 30px;
}

/* Prediction Panel */
.prediction-panel {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.panel-card {
  background: #1e293b;
  border: 1px solid #334155;
  border-radius: 16px;
  padding: 30px;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
}

.card-header h2 {
  font-size: 1.3rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 10px;
  color: #ffffff;
}

.header-icon {
  font-size: 1.5rem;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  background: rgba(16, 185, 129, 0.15);
  border-radius: 8px;
  font-size: 0.8rem;
  font-weight: 600;
  color: #10b981;
}

.pulse {
  width: 8px;
  height: 8px;
  background: #10b981;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
}

.input-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-bottom: 25px;
}

.input-field label {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.85rem;
  font-weight: 600;
  color: #cbd5e1;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.input-field label svg {
  width: 16px;
  height: 16px;
  color: #3b82f6;
}

.pro-input {
  width: 100%;
  padding: 14px 16px;
  background: #0f172a;
  border: 1px solid #334155;
  border-radius: 10px;
  color: #e2e8f0;
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
}

.pro-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.pro-input::placeholder {
  color: #475569;
}
/* Weather Card */
.weather-card {
  margin-top: 20px;
  padding: 20px;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(139, 92, 246, 0.05));
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 12px;
}

.weather-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.weather-header h3 {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 1rem;
  font-weight: 600;
  color: #e2e8f0;
}

.weather-header svg {
  width: 20px;
  height: 20px;
  color: #3b82f6;
}

.refresh-btn {
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.3);
  color: #3b82f6;
  padding: 8px 12px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.refresh-btn:hover:not(:disabled) {
  background: rgba(59, 130, 246, 0.2);
  transform: scale(1.1);
}

.refresh-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.weather-info {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.weather-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.weather-item {
  display: flex;
  flex-direction: column;
  gap: 6px;
  padding: 12px;
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid #1e293b;
  border-radius: 8px;
}

.weather-label {
  font-size: 0.75rem;
  color: #94a3b8;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.weather-value {
  font-size: 1rem;
  color: #e2e8f0;
  font-weight: 600;
}

.holiday-toggle {
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid rgba(59, 130, 246, 0.2);
}

.toggle-label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  user-select: none;
}

.toggle-input {
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: #3b82f6;
}

.toggle-text {
  font-size: 0.95rem;
  color: #e2e8f0;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.pro-btn {
  width: 100%;
  padding: 16px 24px;
  border: none;
  border-radius: 10px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  transition: all 0.3s ease;
  font-family: inherit;
}

.pro-btn svg {
  width: 18px;
  height: 18px;
}

.primary-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.primary-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(59, 130, 246, 0.4);
}

.secondary-btn {
  background: #1e293b;
  color: #3b82f6;
  border: 2px solid #3b82f6;
}

.secondary-btn:hover:not(:disabled) {
  background: rgba(59, 130, 246, 0.1);
  transform: translateY(-2px);
}

.pro-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.status-message {
  margin-top: 20px;
  padding: 16px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  gap: 12px;
  font-weight: 500;
  animation: slideDown 0.3s ease;
}

.status-message.loading {
  background: rgba(245, 158, 11, 0.15);
  border: 1px solid rgba(245, 158, 11, 0.3);
  color: #fbbf24;
}

.status-message.success {
  background: rgba(16, 185, 129, 0.15);
  border: 1px solid rgba(16, 185, 129, 0.3);
  color: #10b981;
}

.message-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Result Cards */
.results-cards {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.result-card {
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  border: 1px solid #334155;
  border-radius: 16px;
  padding: 25px;
  transition: all 0.3s ease;
}

.result-card:hover {
  border-color: #3b82f6;
  transform: translateX(5px);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.result-header h3 {
  font-size: 0.95rem;
  color: #cbd5e1;
  font-weight: 600;
}

.result-badge {
  padding: 4px 10px;
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border-radius: 6px;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0.05em;
}

.result-value {
  font-size: 2.5rem;
  font-weight: 800;
  color: #3b82f6;
  margin-bottom: 15px;
}

.result-card.hourly .result-value {
  color: #ec4899;
}

.result-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-label {
  font-size: 0.85rem;
  color: #64748b;
}

.result-latency {
  font-size: 0.85rem;
  color: #10b981;
  font-weight: 600;
}

/* Analytics Panel */
.analytics-panel {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.chart-container {
  background: #1e293b;
  border: 1px solid #334155;
  border-radius: 16px;
  padding: 25px;
}

.chart-container.half {
  flex: 1;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.chart-header h3 {
  font-size: 1.1rem;
  font-weight: 700;
  color: #ffffff;
}

.chart-legend {
  display: flex;
  gap: 20px;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.85rem;
  color: #94a3b8;
}

.legend-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.legend-dot.primary {
  background: #3b82f6;
}

.chart-wrapper {
  height: 300px;
  position: relative;
}

.chart-wrapper.doughnut {
  height: 250px;
}

.charts-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

/* Live Section */
.live-section {
  background: #1e293b;
  border: 1px solid #334155;
  border-radius: 16px;
  padding: 30px;
}

.section-header {
  margin-bottom: 25px;
}

.section-header h2 {
  font-size: 1.3rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 12px;
  color: #ffffff;
}

.live-indicator {
  width: 10px;
  height: 10px;
  background: #ef4444;
  border-radius: 50%;
  animation: blink 1.5s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

.predictions-table {
  overflow-x: auto;
}

.predictions-table table {
  width: 100%;
  border-collapse: collapse;
}

.predictions-table thead th {
  text-align: left;
  padding: 12px 16px;
  font-size: 0.8rem;
  font-weight: 600;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-bottom: 1px solid #334155;
}

.predictions-table tbody tr {
  border-bottom: 1px solid #334155;
  transition: all 0.2s ease;
}

.predictions-table tbody tr:hover {
  background: rgba(59, 130, 246, 0.05);
}

.predictions-table tbody td {
  padding: 16px;
  font-size: 0.9rem;
  color: #cbd5e1;
}

.type-badge {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 6px;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.05em;
}

.type-badge.daily {
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
}

.type-badge.hourly {
  background: rgba(236, 72, 153, 0.2);
  color: #ec4899;
}

.rides-value {
  font-weight: 700;
  color: #3b82f6;
}

.latency-value {
  color: #10b981;
  font-weight: 600;
}

/* Responsive Design */
@media (max-width: 1400px) {
  .content-grid {
    grid-template-columns: 400px 1fr;
  }
}

@media (max-width: 1200px) {
  .content-grid {
    grid-template-columns: 1fr;
  }
  
  .charts-row {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .dashboard-content {
    padding: 90px 20px 20px;
  }
  
  .dashboard-header {
    flex-direction: column;
  }
  
  .metrics-row {
    grid-template-columns: 1fr;
  }
  
  .quick-stats {
    flex-direction: column;
    gap: 15px;
  }
  
  .page-title {
    font-size: 2rem;
  }
}

/* Hero Section */
.hero-section {
  text-align: center;
  padding: 60px 20px 40px;
  color: white;
}

.hero-content {
  max-width: 800px;
  margin: 0 auto;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 15px;
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.gradient-text {
  background: linear-gradient(45deg, #fff, #a8edea, #fed6e3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 1.3rem;
  opacity: 0.95;
  margin-bottom: 30px;
  font-weight: 300;
}

.stats-row {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.stat-badge {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  padding: 12px 24px;
  border-radius: 50px;
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  font-weight: 500;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.stat-badge:hover {
  transform: translateY(-3px);
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.stat-icon {
  font-size: 1.2rem;
}

/* Prediction Section */
.prediction-section {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.input-card {
  background: white;
  border-radius: 24px;
  padding: 40px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  margin-bottom: 30px;
  animation: slideUp 0.5s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-title {
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 30px;
  display: flex;
  align-items: center;
  gap: 12px;
  color: #1a1a2e;
}

.title-icon {
  font-size: 2rem;
}

.input-group {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
  margin-bottom: 30px;
}

.input-wrapper {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.input-label {
  font-size: 0.95rem;
  font-weight: 600;
  color: #4a5568;
  display: flex;
  align-items: center;
  gap: 6px;
}

.modern-input {
  padding: 16px 20px;
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  font-size: 1rem;
  transition: all 0.3s ease;
  background: #f7fafc;
  font-family: inherit;
}

.modern-input:focus {
  outline: none;
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.button-group {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.predict-btn {
  flex: 1;
  min-width: 200px;
  padding: 18px 32px;
  border: none;
  border-radius: 14px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.predict-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.daily-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.daily-btn:hover:not(:disabled) {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
}

.hourly-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.hourly-btn:hover:not(:disabled) {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(240, 147, 251, 0.4);
}

.btn-icon {
  font-size: 1.3rem;
}

.status-toast {
  margin-top: 25px;
  padding: 18px 24px;
  border-radius: 12px;
  text-align: center;
  font-weight: 600;
  animation: fadeIn 0.3s ease;
}

.status-toast.loading {
  background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
  color: #2d3436;
}

.status-toast.success {
  background: linear-gradient(135deg, #00b894, #00cec9);
  color: white;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Results Section */
.results-section {
  animation: slideUp 0.5s ease;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 25px;
  margin-bottom: 30px;
}

.metric-card {
  background: white;
  border-radius: 20px;
  padding: 35px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.metric-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.metric-card.hourly::before {
  background: linear-gradient(90deg, #f093fb, #f5576c);
}

.metric-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
}

.metric-card h3 {
  font-size: 1.1rem;
  color: #4a5568;
  margin-bottom: 15px;
  font-weight: 600;
}

.metric-card h1 {
  font-size: 3.5rem;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 20px 0;
  font-weight: 800;
}

.metric-card.hourly h1 {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.metric-card p {
  color: #718096;
  font-size: 0.95rem;
  font-weight: 500;
}

/* Chart Card */
.chart-card {
  background: white;
  border-radius: 20px;
  padding: 35px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
}

.chart-title {
  font-size: 1.4rem;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 25px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }
  
  .input-group {
    grid-template-columns: 1fr;
  }
  
  .button-group {
    flex-direction: column;
  }
  
  .predict-btn {
    width: 100%;
  }
  
  .cards-grid {
    grid-template-columns: 1fr;
  }
}
